<Window x:Class="Z3_binding_do_klas.MainWindow" 
        xmlns:local="clr-namespace:Z3_binding_do_klas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Album List" Height="400" Width="600">
    <Window.DataContext>
        <local:MainListaAlbumow/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" ItemsSource="{Binding Albumy}" SelectedItem="{Binding WybranyAlbum}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Tytul}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Dodaj" Command="{Binding DodajAlbumCommand}"/>
            <Button Content="Edytuj" Command="{Binding EdytujLubUsunAlbumCommand}" Margin="10,0"/>
            <Button Content="Usuń" Command="{Binding UsunAlbumCommand}"/>
            <Button Content="Importuj" Command="{Binding ImportujAlbumCommand}" Margin="10,0"/>
            <Button Content="Eksportuj" Command="{Binding ExportujAlbumCommand}"/>
        </StackPanel>
    </Grid>
</Window>
